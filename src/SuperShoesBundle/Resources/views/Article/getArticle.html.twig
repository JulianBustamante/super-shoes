{% extends 'SuperShoesBundle::base.html.twig' %}

{% block title %}SuperShoes - Article{% endblock %}
{% block content %}
    {% if article is defined %}
        <h1>Article #{{ article.id }}</h1>
        <p>Name: {{ article.name }}</p>
        <p>Description: {{ article.description }}</p>
        <p>Price: {{ article.price }}</p>
        <p>Total in Shelf: {{ article.totalInShelf }}</p>
        <p>Total in Vault: {{ article.totalInVault }}</p>
        <p>Store: {{ article.store }}</p>
    {% else %}
        <p>Error code: {{ error_code }}</p>
        <p>Error message: {{ error_message }}</p>
    {% endif %}
{% endblock %}